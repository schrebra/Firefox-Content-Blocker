{
  "manifest_version": 2,
  "name": "Content Blocker",
  "version": "1.0",
  "description": "Hides specified content from web pages",
  "permissions": [
    "activeTab",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["words.js", "content-script.js"]
    }
  ]
}
